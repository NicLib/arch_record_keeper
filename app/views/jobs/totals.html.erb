<h1>Totals</h1>

<%= link_to 'Back', jobs_path %>

<table>
	</tr>
		<td><strong>Total Jobs:</strong></td>
		<td><%= @jobs.count %></td>
	</tr>
	<tr>
		<td><strong>Total AU Jobs:</strong></td>
		<td><%= @au_jobs.count %></td>
	</tr>
	<tr>
		<td><strong>Total CHOG Jobs:</strong></td>
		<td><%= @chog_jobs.count %></td>
	</tr>
		<td><strong>Total Hours:</strong></td>
		<td><%= @total_hours %></td>
	</tr>
	</tr>
		<td><strong>Total AU Hours:</strong></td>
		<td><%= @total_au %></td>
	</tr>
	</tr>
		<td><strong>Total CHOG Hours:</strong></td>
		<td><%= @total_chog %></td>
	</tr>
</table>

<h3>Total Jobs</h3>
<%= pie_chart Job.group(:au_chog).count %>


<h3>Total Hours</h3>
<%= pie_chart Job.group(:au_chog).sum(:time_spend) %>
