<h1>Totals</h1>

<%= link_to 'Back', root_path %>

<%= form_tag(totals_path ,:method => 'get', id: 'date_range')  do  %>
	<%= label :start_date, "Start: " %>
	<%= date_field_tag :start_date, params[:search], placeholder: 'Start Date', id: 'start_date' %>
	<%= label :end_date, "End: "%>
	<%= date_field_tag :end_date, params[:search], placeholder: 'End Date', id: 'end_date'%>
	<%= submit_tag 'Search', :name => nil %>
<% end %>

<table>
	<tr>
		<td><strong>Total Jobs:</strong></td>
		<td><strong><%= @jobs.count %></strong></td>
	</tr>
	<tr>
		<td><strong>Total AU Jobs:</strong></td>
		<td><%= @au_jobs.count %></td>
	</tr>
	<tr>
		<td><strong>Total CHOG Jobs:</strong></td>
		<td><%= @chog_jobs.count %></td>
	</tr>
	<tr>
		<td><hr /></td>
	</tr>
	<tr>
		<td><strong>Total Hours:</strong></td>
		<td><strong><%= @total_hours %></strong></td>
	</tr>
	<tr>
		<td><strong>Total AU Hours:</strong></td>
		<td><%= @total_au %></td>
	</tr>
	<tr>
		<td><strong>Total CHOG Hours:</strong></td>
		<td><%= @total_chog %></td>
	</tr>
</table>



<h3>Total Jobs</h3>
<%= pie_chart Job.search(:start_date, :end_date).group(:au_chog).count,  donut: true %>


<h3>Total Hours</h3>
<%= pie_chart Job.search(:start_date, :end_date).group(:au_chog).sum(:time_spend), donut: true %>
