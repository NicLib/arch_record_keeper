<%= form_for(job) do |f| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zip %>
    <%= f.number_field :zip %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>


  <div class="field">
    <%= f.label :telephone %>
    <%= f.telephone_field :telephone %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :person_type %>
    <%= f.select :person_type, ['AU Faculty/Staff', 'AU Student', 'AU Alumnus', 'Church Historian', 'Family Historian', 'CHOG MIN', 'CHOG Pastor', 'CHOG Member', 'Other'] %>
  </div>

  <div class="field">
    <%= f.label :research_use %>
    <%= f.select :research_use, ['Research Paper', 'Thesis/Dissertation', 'Speech/Debate', 'Family History', 'Church History', 'Article', 'Book', 'University Business', 'Other'] %>
  </div>

  <div class="field">
  	<%= f.label :start_date, 'Date Started' %>
  	<%= f.date_field :start_date %>
  </div>

  <div class="field">
  	<%= f.label :end_date, 'Date Last Worked On' %>
  	<%= f.date_field :end_date %>
  </div>

  <div class="field">
    <%= f.label :time_spend, 'Time Spent' %>
    <%= f.text_field :time_spend %>
  </div>

  <div class="field">
    <%= f.label :au_chog %>
    <%= f.select :au_chog, ['AU', 'CHOG'] %>
  </div>

  <div class="field">
    <%= f.label :complete %>
    <%= f.check_box :complete %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
