<form class="form-horizontal">
    <%= form_for(user) do |f| %>
        <% if user.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                    <% user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-group">
            <%= f.label :first_name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :first_name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :last_name, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :last_name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :username, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :username, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= f.text_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: 'btn btn-default' %>
            </div>
        </div>

    <% end %>
</form>
