<%= provide(:title, 'Users') %>
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="col-sm-12">
	<%= link_to 'Add User', new_user_path, class: 'btn btn-default' %>
<div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr data-link="<%= user_path(user) %>">
        <td><%= "#{user.first_name} #{user.last_name}" %></td>
        <td><%= user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
